{{define "swim-row"}}
    {{$root := .}}
    {{$swim := $root.Partial}}
    {{if $swim}}
        <tr>
            <td>{{$swim.Date.Format "2006-01-02"}}</td>
            <td>{{$swim.DistanceM | numberFormat}} m</td>
            <td>
                {{range $i := seq (add $swim.Assessment 1)}}
                    <i class="fas fa-star"></i>
                {{end}}
                {{range $i := seq (emptyStars $swim.Assessment)}}
                    <i class="far fa-star"></i>
                {{end}}
            </td>
            <td class="swim-actions">
                <a class="edit-swim-button"
                   href="/swims/edit/{{$swim.Id}}?sort={{$root.Data.Sort}}&direction={{$root.Data.Direction}}">
                    <i class="fas fa-pen"></i>
                    <span>Edit</span>
                </a>
            </td>
        </tr>
    {{end}}
{{end}}
