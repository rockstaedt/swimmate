{{define "title"}}Create Swim{{end}}
{{define "main"}}
    <div class="swim-form-page">
        <div class="swim-form-card">
            <a href="/" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>
            <div class="swim-form-header">
                <div class="header-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <div>
                    <h2>Log a Swim</h2>
                    <p>Create a new swim entry.</p>
                </div>
            </div>

            <form class="form swim-form" method="POST" action="/swim">
                <div class="form-row">
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" name="date" id="date" value="{{.CurrentDate}}">
                    </div>
                    <div class="form-group">
                        <label for="distance_m">Distance (m)</label>
                        <input type="number" name="distance_m" id="distance_m" min="0"
                               placeholder="e.g. 1500">
                    </div>
                </div>
                <div class="form-group">
                    <label for="assessment">Assessment</label>
                    <select id="assessment" name="assessment">
                        <option value="2">Good</option>
                        <option value="1" selected>Neutral</option>
                        <option value="0">Bad</option>
                    </select>
                </div>
                <div class="form-footer">
                    <button type="submit">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
{{end}}
